# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=quicksell

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-here

# OpenAI API Configuration (Required for photo analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://quicksell.monster,http://quicksell.monster

# eBay API Configuration (Optional - for eBay marketplace integration)
EBAY_APP_ID=your-ebay-app-id-here
EBAY_CERT_ID=your-ebay-cert-id-here
EBAY_CLIENT_ID=your-ebay-client-id-here
EBAY_CLIENT_SECRET=your-ebay-client-secret-here
EBAY_SANDBOX=false
EBAY_OAUTH_URL=https://auth.ebay.com/oauth2/authorize
EBAY_TOKEN_URL=https://api.ebay.com/identity/v1/oauth2/token
EBAY_REDIRECT_URI=https://quicksell.monster/api/v1/marketplaces/ebay/callback

# Etsy API Configuration (Optional - for Etsy marketplace integration)
ETSY_API_KEY=your-etsy-api-key-here
ETSY_REDIRECT_URI=https://quicksell.monster/api/v1/marketplaces/etsy/callback

# API URL (for OAuth callbacks)
API_URL=https://quicksell.monster
