# ============================================
# ENVIRONMENT: development, production, test
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=quicksell

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================

# OpenAI API (for description generation & image analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe (for payments & subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS S3 (for photo storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=quicksell-photos

# ============================================
# MARKETPLACE API CREDENTIALS
# ============================================

# eBay OAuth
EBAY_OAUTH_CLIENT_ID=your-ebay-client-id
EBAY_OAUTH_CLIENT_SECRET=your-ebay-client-secret
# Production:
EBAY_OAUTH_REDIRECT_URI=https://api.quicksell.monster/api/v1/marketplaces/ebay/oauth-callback
# Development:
# EBAY_OAUTH_REDIRECT_URI=http://localhost:5000/api/v1/marketplaces/ebay/oauth-callback

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
# Production:
FACEBOOK_OAUTH_REDIRECT_URI=https://quicksell.monster/auth/facebook/callback
# Development:
# FACEBOOK_OAUTH_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# Craigslist (if API available)
CRAIGSLIST_API_KEY=your-craigslist-api-key

# Amazon SP-API
AMAZON_SELLING_PARTNER_CLIENT_ID=your-sp-api-client-id
AMAZON_SELLING_PARTNER_CLIENT_SECRET=your-sp-api-client-secret
AMAZON_SELLING_PARTNER_REFRESH_TOKEN=your-refresh-token

# Mercari API
MERCARI_API_KEY=your-mercari-api-key

# Poshmark API
POSHMARK_API_KEY=your-poshmark-api-key

# Other Marketplaces (add as needed)
ETSY_API_KEY=your-etsy-api-key
SHOPIFY_API_KEY=your-shopify-api-key

# ============================================
# CORS CONFIGURATION
# ============================================
# Production:
CORS_ORIGINS=https://quicksell.monster
# Development:
# CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@quicksell.app

# ============================================
# FRONTEND URLS
# ============================================
# Production:
FRONTEND_URL=https://quicksell.monster
MOBILE_APP_URL=https://quicksell.monster
WEB_APP_URL=https://quicksell.monster
API_BASE_URL=https://api.quicksell.monster

# Development:
# FRONTEND_URL=http://localhost:3000
# MOBILE_APP_URL=http://localhost:8081
# WEB_APP_URL=http://localhost:3000
# API_BASE_URL=http://localhost:5000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_MARKETPLACE_SYNC=true
ENABLE_AI_DESCRIPTIONS=true
ENABLE_PRICE_ESTIMATION=true
ENABLE_GAMIFICATION=true
ENABLE_STRIPE_PAYMENTS=true

# ============================================
# ML/AI MODELS
# ============================================
ML_MODEL_PATH=./models/price-estimation-model.pkl
TENSORFLOW_MODEL_PATH=./models/image-classification-model

# ============================================
# SHIPPING CARRIERS API KEYS
# ============================================
USPS_API_KEY=your-usps-api-key
UPS_API_KEY=your-ups-api-key
FEDEX_API_KEY=your-fedex-api-key

# ============================================
# NOTIFICATION SERVICES
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase for push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
