{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh",
                        "timeout": 60000
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/enforce-git-safety.sh",
                        "timeout": 5000
                    },
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/enforce-github-first.sh",
                        "timeout": 5000
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/enforce-auto-proceed.sh",
                        "timeout": 5000
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "*"
        ]
    }
}
