{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/enforce-github-source-of-truth.sh",
                        "timeout": 10000
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash .claude/hooks/post-tool-workflow-reminder.sh",
                        "timeout": 5000
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(git *)",
            "Bash(docker *)",
            "Bash(docker-compose *)",
            "Bash(npm *)",
            "Bash(npx *)",
            "Bash(node *)",
            "Bash(pm2 *)",
            "Bash(curl *)",
            "Bash(wget *)",
            "Bash(ssh *)",
            "Bash(ls *)",
            "Bash(cd *)",
            "Bash(mkdir *)",
            "Bash(cp *)",
            "Bash(mv *)",
            "Bash(rm *)",
            "Bash(cat *)",
            "Bash(grep *)",
            "Bash(find *)",
            "Bash(chmod *)",
            "Bash(chown *)",
            "Bash(make *)",
            "Read",
            "Edit",
            "Write",
            "Glob",
            "Grep",
            "WebFetch",
            "WebSearch",
            "Task",
            "Skill"
        ]
    }
}
